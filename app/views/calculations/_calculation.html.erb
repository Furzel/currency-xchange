<tr>
  <td><%= calculation.amount %> <%= calculation.base_currency %> to <%= calculation.target_currency %></td>
  <td><%= calculation.updated_at.to_s %></td>
  <td>
    <%= link_to calculation_path(calculation) do %>
      <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
    <% end %>
    <%= link_to edit_calculation_path(calculation) do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <% end %>
    <%= link_to calculation_path(calculation), method: :delete, data: { confirm: 'Are you sure ?' } do %>
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    <% end %>
  </td> 
